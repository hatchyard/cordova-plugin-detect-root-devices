<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-detect-root-devices" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>DetectRootDevices</name>
    <js-module name="DetectRootDevices" src="www/detectRootDevices.js">
        <clobbers target="detectRoot" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="DetectRootDevices">
                <param name="android-package" value="com.example.root.DetectRootDevices" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/DetectRootDevices.java" target-dir="src/com/example/root/DetectRootDevices" />
        <framework src="src/build-extras.gradle" custom="true" type="gradleReference" />
    </platform>
</plugin>